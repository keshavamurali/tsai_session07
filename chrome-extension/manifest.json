{
  "manifest_version": 3,
  "name": "AI Agent Browser Memory",
  "version": "1.0",
  "description": "AI agent remembers pages you visit and searches them using embeddings + FAISS.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
